{{ include('partials/main.html.twig') }}

<head>
    {{ include('partials/title-meta.html.twig', { title: 'Mon Profil' }) }}
    {{ include('partials/head-css.html.twig') }}
</head>

<body>
    <div id="layout-wrapper">
        {{ include('partials/menu.html.twig') }}
        
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0"><i class="bx bx-user-circle me-2"></i>Mon Profil</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="{{ path('app_dash') }}">Dashboard</a></li>
                                        <li class="breadcrumb-item active">Profil</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="text-center">
                                        {% if user.profileImage %}
                                            <img src="/uploads/profile_images/{{ user.profileImage }}" 
                                                 alt="Profile" 
                                                 class="rounded-circle avatar-xl mb-3"
                                                 style="width: 150px; height: 150px; object-fit: cover;">
                                        {% else %}
                                            <div class="avatar-xl mx-auto mb-3">
                                                <div class="avatar-title bg-primary bg-soft text-primary rounded-circle font-size-48">
                                                    {{ user.name|first|upper }}{{ user.lastname|first|upper }}
                                                </div>
                                            </div>
                                        {% endif %}
                                        <h5 class="mb-1">{{ user.name|upper }} {{ user.lastname|capitalize }}</h5>
                                        <p class="text-muted">{{ user.office }}</p>
                                        
                                        {% if is_granted('ROLE_ADMIN') and user.type %}
                                        <span class="badge bg-primary font-size-12">{{ user.type.name }}</span>
                                        {% endif %}
                                        
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <span class="badge bg-danger font-size-12">Administrateur</span>
                                        {% endif %}

                                        <div class="mt-3">
                                            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary btn-sm">
                                                <i class="bx bx-edit me-1"></i>Modifier mon profil
                                            </a>
                                        </div>
                                    </div>

                                    <hr class="my-4">

                                    <div class="text-muted">
                                        <h5 class="font-size-16 mb-3">Statistiques</h5>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><i class="bx bx-package me-2"></i>Commandes</span>
                                            <span class="fw-bold">{{ user.commandes|length }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><i class="bx bx-time-five me-2"></i>En attente</span>
                                            <span class="fw-bold text-warning">{{ user.commandes|filter(c => c.statut == 'en_attente')|length }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><i class="bx bx-check-circle me-2"></i>Validées</span>
                                            <span class="fw-bold text-success">{{ user.commandes|filter(c => c.statut == 'validee')|length }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><i class="bx bx-heart me-2"></i>Favoris</span>
                                            <span class="fw-bold">{{ user.favoris|length }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span><i class="bx bx-shopping-bag me-2"></i>Panier</span>
                                            <span class="fw-bold">{{ user.paniers|length }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">Centres d'intérêt</h5>
                                    {% if user.categorie|length > 0 %}
                                        <div class="d-flex flex-wrap gap-2">
                                            {% for cat in user.categorie %}
                                            <span class="badge bg-info font-size-12">{{ cat.name }}</span>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <p class="text-muted mb-0">Aucune catégorie sélectionnée</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-8">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Informations personnelles</h5>
                                    
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Prénom</label>
                                                <p class="fw-bold">{{ user.name|upper }}</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Nom</label>
                                                <p class="fw-bold">{{ user.lastname|capitalize }}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Email</label>
                                                <p class="fw-bold">
                                                    <i class="bx bx-envelope me-2"></i>{{ user.email }}
                                                    {% if user.isVerified %}
                                                    <span class="badge bg-success ms-2">Vérifié</span>
                                                    {% else %}
                                                    <span class="badge bg-warning ms-2">Non vérifié</span>
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Téléphone</label>
                                                <p class="fw-bold"><i class="bx bx-phone me-2"></i>{{ user.phone }}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Entreprise</label>
                                                <p class="fw-bold"><i class="bx bx-buildings me-2"></i>{{ user.office }}</p>
                                            </div>
                                        </div>
                                    </div>

                                    {% if is_granted('ROLE_ADMIN') and user.type %}
                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Type de compte</label>
                                                <p class="fw-bold"><i class="bx bx-user-check me-2"></i>{{ user.type.name }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Dernières commandes</h5>
                                    
                                    {% if user.commandes|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Numéro</th>
                                                    <th>Lot</th>
                                                    <th>Montant</th>
                                                    <th>Date</th>
                                                    <th>Statut</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for commande in user.commandes|slice(0, 5) %}
                                                <tr>
                                                    <td><strong>{{ commande.numeroCommande }}</strong></td>
                                                    <td>{{ commande.lot.name }}</td>
                                                    <td>{{ commande.prixTotal|number_format(2, ',', ' ') }} €</td>
                                                    <td>{{ commande.createdAt|date('d/m/Y') }}</td>
                                                    <td>
                                                        {% if commande.statut == 'en_attente' %}
                                                        <span class="badge bg-warning">En attente</span>
                                                        {% elseif commande.statut == 'validee' %}
                                                        <span class="badge bg-success">Validée</span>
                                                        {% else %}
                                                        <span class="badge bg-danger">Annulée</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('app_commande_view', {id: commande.id}) }}" class="btn btn-sm btn-primary">
                                                            <i class="bx bx-show"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="text-center mt-3">
                                        <a href="{{ path('app_mes_commandes') }}" class="btn btn-outline-primary">
                                            <i class="bx bx-list-ul me-2"></i>Voir toutes les commandes
                                        </a>
                                    </div>
                                    {% else %}
                                    <div class="text-center py-4">
                                        <i class="bx bx-package font-size-48 text-muted mb-3"></i>
                                        <p class="text-muted">Aucune commande pour le moment</p>
                                        <a href="{{ path('app_dash') }}" class="btn btn-primary">
                                            <i class="bx bx-shopping-bag me-2"></i>Parcourir les lots
                                        </a>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ include('partials/footer.html.twig') }}
        </div>
    </div>

    {{ include('partials/right-sidebar.html.twig') }}
    {{ include('partials/vendor-scripts.html.twig') }}
    <script src="/js/app.js"></script>
</body>
</html>
