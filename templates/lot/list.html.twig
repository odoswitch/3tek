{{ include('partials/main.html.twig') }}

<head>
    {{ include('partials/title-meta.html.twig', {title: 'Nos Lots'}) }}
    {{ include('partials/head-css.html.twig') }}
</head>

{{ include('partials/body.html.twig') }}

<div id="layout-wrapper">
    {{ include('partials/menu.html.twig') }}

    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                {{ include('partials/page-title.html.twig', {pagetitle: '3Tek-Europe', title: 'Nos Lots'}) }}

                <div class="row">
                    {% for lot in lots %}
                    <div class="col-xl-4 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="product-img position-relative">
                                    {% if lot.images|length > 0 %}
                                        <img src="{{ vich_uploader_asset(lot.images[0], 'imageFile') }}" 
                                             alt="{{ lot.name }}" 
                                             class="img-fluid mx-auto d-block" 
                                             style="height: 250px; object-fit: cover; width: 100%;">
                                        {% if lot.images|length > 1 %}
                                            <span class="badge bg-primary position-absolute" style="top: 10px; right: 10px;">
                                                <i class="bx bx-images"></i> {{ lot.images|length }} photos
                                            </span>
                                        {% endif %}
                                    {% else %}
                                        <div class="text-center py-5 bg-light">
                                            <i class="bx bx-image font-size-48 text-muted"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="mt-4 text-center">
                                    <h5 class="mb-3 text-truncate">
                                        <a href="{{ path('app_lot_view', {id: lot.id}) }}" class="text-dark">
                                            {{ lot.name }}
                                        </a>
                                    </h5>
                                    <p class="text-muted">
                                        <span class="badge bg-soft-primary text-primary">{{ lot.cat.name }}</span>
                                    </p>
                                    <h5 class="my-0">
                                        <span class="text-primary">{{ lot.prix|number_format(2, ',', ' ') }} €</span>
                                    </h5>
                                </div>
                                <div class="mt-3 d-grid">
                                    <a href="{{ path('app_lot_view', {id: lot.id}) }}" 
                                       class="btn btn-primary waves-effect waves-light">
                                        <i class="bx bx-show me-1"></i> Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="bx bx-package font-size-48 text-muted"></i>
                                <h5 class="mt-3">Aucun lot disponible</h5>
                                <p class="text-muted">Les lots seront bientôt disponibles.</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {{ include('partials/footer.html.twig') }}
    </div>
</div>

{{ include('partials/right-sidebar.html.twig') }}
{{ include('partials/vendor-scripts.html.twig') }}

</body>
</html>
