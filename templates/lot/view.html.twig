{{ include('partials/vendor-scripts.html.twig') }}

<script>
    let currentImageIndex = 0;
    const images = [
        {% for image in lot.images %}
            '{{ vich_uploader_asset(image, 'imageFile') }}'{% if not loop.last %},{% endif %}
        {% endfor %}
    ];

    function changeMainImage(src, element, index) {
        document.getElementById('mainImage').src = src;
        currentImageIndex = index;
        
        // Remove active class from all thumbnails
        document.querySelectorAll('.thumbnail').forEach(thumb => {
            thumb.classList.remove('active');
        });
        
        // Add active class to clicked thumbnail
        element.classList.add('active');
    }

    function openGallery(index) {
        currentImageIndex = index;
        document.getElementById('galleryModal').classList.add('active');
        document.getElementById('galleryImage').src = images[currentImageIndex];
    }

    function closeGallery() {
        document.getElementById('galleryModal').classList.remove('active');
    }

    function changeGalleryImage(direction) {
        currentImageIndex += direction;
        
        if (currentImageIndex < 0) {
            currentImageIndex = images.length - 1;
        } else if (currentImageIndex >= images.length) {
            currentImageIndex = 0;
        }
        
        document.getElementById('galleryImage').src = images[currentImageIndex];
    }

    // Close modal on ESC key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeGallery();
        }
    });

    // Navigate with arrow keys
    document.addEventListener('keydown', function(event) {
        if (document.getElementById('galleryModal').classList.contains('active')) {
            if (event.key === 'ArrowLeft') {
                changeGalleryImage(-1);
            } else if (event.key === 'ArrowRight') {
                changeGalleryImage(1);
            }
        }
    });
</script>

</body>
