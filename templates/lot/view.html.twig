{{ include('partials/main.html.twig') }}

<head>
    {{ include('partials/title-meta.html.twig', {title: lot.name}) }}
    {{ include('partials/head-css.html.twig') }}
    
    <style>
        .main-image-container {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 75%; /* Ratio 4:3 */
            overflow: hidden;
            border-radius: 8px;
            cursor: zoom-in;
            background: #f8f9fa;
        }
        
        .main-image-container::after {
            content: 'üîç Cliquer pour agrandir';
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            z-index: 2;
        }
        
        .main-image-container:hover::after {
            opacity: 1;
        }
        
        .main-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }
        
        .main-image:hover {
            transform: scale(1.02);
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .main-image-container {
                padding-bottom: 100%; /* Ratio 1:1 sur mobile */
            }
        }
        
        @media (min-width: 769px) and (max-width: 1024px) {
            .main-image-container {
                padding-bottom: 85%; /* Ratio interm√©diaire sur tablette */
            }
        }
        
        .thumbnail-container {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            overflow-x: auto;
            padding: 10px 0;
        }
        
        .thumbnail {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.3s ease;
        }
        
        .thumbnail:hover {
            border-color: #667eea;
            transform: scale(1.05);
        }
        
        .thumbnail.active {
            border-color: #667eea;
            box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
        }
        
        /* Modal Gallery */
        .gallery-modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.95);
        }
        
        .gallery-modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .modal-content-gallery {
            max-width: 90%;
            max-height: 90%;
            object-fit: contain;
        }
        
        .close-gallery {
            position: absolute;
            top: 20px;
            right: 40px;
            color: #fff;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
            z-index: 10000;
        }
        
        .gallery-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            font-size: 30px;
            padding: 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s;
        }
        
        .gallery-nav:hover {
            background: rgba(255, 255, 255, 0.4);
        }
        
        .gallery-prev {
            left: 20px;
        }
        
        .gallery-next {
            right: 20px;
        }
    </style>
</head>

{{ include('partials/body.html.twig') }}

<div id="layout-wrapper">
    {{ include('partials/menu.html.twig') }}

    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                {{ include('partials/page-title.html.twig', {pagetitle: 'Lots', title: lot.name}) }}

                <div class="row">
                    <div class="col-lg-7">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Galerie d'images</h5>
                                
                                {% if lot.images|length > 0 %}
                                    <!-- Image principale -->
                                    <div class="main-image-container" onclick="openGallery(0)">
                                        <img id="mainImage" 
                                             src="{{ vich_uploader_asset(lot.images[0], 'imageFile') }}" 
                                             alt="{{ lot.name }}" 
                                             class="main-image">
                                    </div>
                                    
                                    <!-- Miniatures -->
                                    <div class="thumbnail-container">
                                        {% for key, image in lot.images %}
                                            <img src="{{ vich_uploader_asset(image, 'imageFile') }}" 
                                                 alt="Image {{ key + 1 }}" 
                                                 class="thumbnail {% if key == 0 %}active{% endif %}"
                                                 onclick="changeMainImage('{{ vich_uploader_asset(image, 'imageFile') }}', this, {{ key }})">
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="text-center py-5">
                                        <i class="bx bx-image font-size-48 text-muted"></i>
                                        <p class="text-muted mt-3">Aucune image disponible</p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title mb-3">{{ lot.name }}</h4>
                                
                                <div class="mb-3">
                                    <span class="badge bg-primary font-size-14">{{ lot.cat.name|capitalize }}</span>
                                </div>
                                
                                <h3 class="text-primary mb-3">{{ lot.prix|number_format(2, ',', ' ') }} ‚Ç¨</h3>
                                
                                <div class="mb-4">
                                    <span class="badge {% if lot.quantite > 10 %}bg-success{% elseif lot.quantite > 0 %}bg-warning{% else %}bg-danger{% endif %} font-size-14">
                                        {% if lot.quantite > 0 %}
                                            <i class="bx bx-check-circle"></i> En stock ({{ lot.quantite }} disponible{{ lot.quantite > 1 ? 's' : '' }})
                                        {% else %}
                                            <i class="bx bx-x-circle"></i> Rupture de stock
                                        {% endif %}
                                    </span>
                                </div>
                                
                                <div class="mb-4">
                                    <h5 class="font-size-16 mb-2">Description</h5>
                                    <div class="text-muted">{{ lot.description|nl2br|replace({'&nbsp;': ' '}) }}</div>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    {% if lot.quantite > 0 %}
                                        <form action="{{ path('app_panier_add', {lotId: lot.id}) }}" method="POST">
                                            <div class="mb-3">
                                                <label for="quantite" class="form-label">Quantit√©</label>
                                                <input type="number" class="form-control" id="quantite" name="quantite" value="1" min="1" max="{{ lot.quantite }}" required>
                                                <small class="text-muted">Maximum disponible : {{ lot.quantite }}</small>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-lg w-100 waves-effect waves-light">
                                                <i class="bx bx-cart-add me-2"></i> Ajouter au panier
                                            </button>
                                        </form>
                                    {% else %}
                                        <button class="btn btn-secondary btn-lg" disabled>
                                            <i class="bx bx-x-circle me-2"></i> Produit indisponible
                                        </button>
                                    {% endif %}
                                    <a href="{{ path('app_panier') }}" class="btn btn-outline-primary waves-effect mt-2">
                                        <i class="bx bx-shopping-bag me-2"></i> Voir mon panier
                                    </a>
                                    <a href="{{ path('app_favori_toggle', {lotId: lot.id}) }}" class="btn btn-outline-{% if isFavorite %}danger{% else %}secondary{% endif %} waves-effect mt-2">
                                        <i class="bx {% if isFavorite %}bxs-heart{% else %}bx-heart{% endif %} me-2"></i> 
                                        {% if isFavorite %}Retirer des favoris{% else %}Ajouter aux favoris{% endif %}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ include('partials/footer.html.twig') }}
    </div>
</div>

<!-- Modal Gallery -->
<div id="galleryModal" class="gallery-modal">
    <span class="close-gallery" onclick="closeGallery()">&times;</span>
    <button class="gallery-nav gallery-prev" onclick="changeGalleryImage(-1)">&#10094;</button>
    <img id="galleryImage" class="modal-content-gallery" src="">
    <button class="gallery-nav gallery-next" onclick="changeGalleryImage(1)">&#10095;</button>
</div>

