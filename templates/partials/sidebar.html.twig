<!-- ========== Left Sidebar Start ========== -->
<div class="vertical-menu">

  <div data-simplebar="data-simplebar" class="h-100">

    <!--- Sidemenu -->
    <div id="sidebar-menu">
      <!-- Left Menu Start -->
      <ul class="metismenu list-unstyled" id="side-menu">
        <li class="menu-title" data-key="t-menu">{% trans %}Menu{% endtrans %}</li>

        <li>
          <a href="{{ path('app_dash') }}">
            <i data-feather="home"></i>
            <span data-key="t-dashboard">{% trans %}Dashboard{% endtrans %}</span>
          </a>
        </li>

        <li>
          <a href="{{ path('app_panier') }}">
            <i data-feather="shopping-cart"></i>
            <span data-key="t-panier">Mon Panier</span>
            {% set panierCount = app.user.paniers|length %}
            {% if panierCount > 0 %}
            <span class="badge rounded-pill bg-primary float-end">{{ panierCount }}</span>
            {% endif %}
          </a>
        </li>

        <li>
          <a href="{{ path('app_mes_commandes') }}">
            <i data-feather="package"></i>
            <span data-key="t-commandes">Mes Commandes</span>
            {% set commandesEnAttente = app.user.commandes|filter(c => c.statut == 'en_attente')|length %}
            {% if commandesEnAttente > 0 %}
            <span class="badge rounded-pill bg-warning float-end">{{ commandesEnAttente }}</span>
            {% endif %}
          </a>
        </li>

        <li>
          <a href="{{ path('app_favoris') }}">
            <i data-feather="heart"></i>
            <span data-key="t-favoris">Mes Favoris</span>
          </a>
        </li>

        <li>
          <a href="{{ path('app_my_data') }}">
            <i data-feather="shield"></i>
            <span data-key="t-rgpd">Mes Données (RGPD)</span>
          </a>
        </li>

        {% if is_granted('ROLE_ADMIN') %}
        <li>
          <a href="{{ path('app_admin') }}">
            <i data-feather="shield"></i>
            <span data-key="t-admin">Administration</span>
          </a>
        </li>
        {% endif %}

        <li class="menu-title mt-2" data-key="t-components">{% trans %}Surprise avec 3Tek-Europe{% endtrans %}</li>

      </ul>

      <div class="card sidebar-alert border-0 text-center mx-4 mb-0 mt-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="card-body">
          <div class="avatar-md mx-auto mb-3">
            <div class="avatar-title bg-white bg-opacity-25 rounded-circle">
              <i class="bx bx-gift font-size-24 text-white"></i>
            </div>
          </div>
          <div class="mt-3">
            <h5 class="alertcard-title font-size-16 text-white">Accès Illimité</h5>
            <p class="font-size-13 text-white-50">Passez à un plan Business pour débloquer toutes les fonctionnalités premium de 3Tek-Europe</p>
            <a href="#!" class="btn btn-light btn-sm mt-2 waves-effect waves-light">
              <i class="bx bx-rocket me-1"></i> Découvrir les offres
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Sidebar -->
  </div>
</div>
<!-- Left Sidebar End -->