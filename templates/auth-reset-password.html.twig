<script>
document.addEventListener('DOMContentLoaded', function() {
    const passwordInput = document.getElementById('change_password_form_plainPassword_first');
    
    if (passwordInput) {
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            const helpText = this.parentElement.querySelector('.form-text');
            
            // Vérifications
            const hasMinLength = password.length >= 8;
            const hasMaxLength = password.length <= 20;
            const hasUpperCase = /[A-Z]/.test(password);
            const hasLowerCase = /[a-z]/.test(password);
            const hasNumber = /\d/.test(password);
            
            // Changer la couleur du texte d'aide en fonction de la validité
            if (password.length > 0) {
                if (hasMinLength && hasMaxLength && hasUpperCase && hasLowerCase && hasNumber) {
                    helpText.style.color = '#28a745'; // Vert si valide
                    helpText.innerHTML = '<i class="mdi mdi-check-circle"></i> Mot de passe valide !';
                } else {
                    helpText.style.color = '#dc3545'; // Rouge si invalide
                    let messages = [];
                    if (!hasMinLength) messages.push('au moins 8 caractères');
                    if (!hasMaxLength) messages.push('maximum 20 caractères');
                    if (!hasUpperCase) messages.push('une majuscule');
                    if (!hasLowerCase) messages.push('une minuscule');
                    if (!hasNumber) messages.push('un chiffre');
                    
                    helpText.innerHTML = '<i class="mdi mdi-alert-circle"></i> Requis: ' + messages.join(', ');
                }
            } else {
                helpText.style.color = '#6c757d'; // Gris par défaut
                helpText.innerHTML = '<i class="mdi mdi-information-outline"></i> Le mot de passe doit contenir entre 8 et 20 caractères, au moins une majuscule, une minuscule et un chiffre.';
            }
        });
    }
});
</script>

