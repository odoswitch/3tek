  {{ include('partials/head-css.html.twig') }}
  
  <style>
    .form-error, .form-error-message, ul.form-error-list li {
      color: #dc3545 !important;
      font-size: 0.875rem;
      margin-top: 0.25rem;
      display: block;
    }
    .form-text {
      margin-top: 0.25rem;
      margin-bottom: 0.5rem;
    }
    .invalid-feedback, .form-error-icon {
      display: block;
      color: #dc3545 !important;
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }
    /* Style pour les erreurs Symfony */
    .form-control.is-invalid, .was-validated .form-control:invalid {
      border-color: #dc3545;
    }
    /* Messages d'erreur de formulaire */
    form .invalid-feedback, form .form-error {
      display: none !important;
    }
    /* Masquer les erreurs par défaut de Symfony pour utiliser nos bandeaux */
    form ul.form-error-list {
      display: none !important;
    }
    /* Bandeau d'alerte pour les erreurs */
    .alert-danger {
      background-color: #f8d7da;
      border-color: #f5c2c7;
      color: #842029;
      padding: 1rem;
      margin-bottom: 1rem;
      border-left: 4px solid #dc3545;
      border-radius: 0.25rem;
    }
    .alert-danger strong {
      color: #dc3545;
    }
    .alert-danger ul {
      margin: 0.5rem 0 0 0;
      padding-left: 1.5rem;
      list-style-type: none;
    }
    .alert-danger ul li {
      color: #842029;
      margin: 0.25rem 0;
      position: relative;
      padding-left: 1.5rem;
    }
    .alert-danger ul li:before {
      content: "✗";
      position: absolute;
      left: 0;
      color: #dc3545;
      font-weight: bold;
    }
  </style>

</head>

