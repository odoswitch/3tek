{{ include('partials/main.html.twig') }}

<head>
    {{ include('partials/title-meta.html.twig', { title: 'Mes Commandes' }) }}
    {{ include('partials/head-css.html.twig') }}
</head>

<body>
    <div id="layout-wrapper">
        {{ include('partials/menu.html.twig') }}
        
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0"><i class="bx bx-list-ul me-2"></i>Mes Commandes</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="{{ path('app_dash') }}">Dashboard</a></li>
                                        <li class="breadcrumb-item active">Mes Commandes</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bx bx-check-circle me-2"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-12">
                            {% if commandes is empty %}
                                <div class="card">
                                    <div class="card-body text-center py-5">
                                        <i class="bx bx-package font-size-48 text-muted mb-3"></i>
                                        <h5>Aucune commande</h5>
                                        <p class="text-muted">Vous n'avez pas encore passé de commande</p>
                                        <a href="{{ path('app_dash') }}" class="btn btn-primary">
                                            <i class="bx bx-store me-2"></i>Parcourir les lots
                                        </a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>N° Commande</th>
                                                        <th>Date</th>
                                                        <th>Article</th>
                                                        <th>Quantité</th>
                                                        <th>Total</th>
                                                        <th>Statut</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for commande in commandes %}
                                                    <tr>
                                                        <td><strong>{{ commande.numeroCommande }}</strong></td>
                                                        <td>{{ commande.createdAt|date('d/m/Y H:i') }}</td>
                                                        <td>{{ commande.lot.name }}</td>
                                                        <td>{{ commande.quantite }}</td>
                                                        <td><strong>{{ commande.prixTotal|number_format(2, ',', ' ') }} €</strong></td>
                                                        <td>
                                                            <span class="badge {% if commande.statut == 'validee' %}bg-success{% elseif commande.statut == 'annulee' %}bg-danger{% else %}bg-warning{% endif %}">
                                                                {{ commande.statutLabel }}
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('app_commande_view', {id: commande.id}) }}" class="btn btn-sm btn-primary">
                                                                <i class="bx bx-show"></i> Détails
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {{ include('partials/footer.html.twig') }}
        </div>
    </div>

    {{ include('partials/right-sidebar.html.twig') }}
    {{ include('partials/vendor-scripts.html.twig') }}
    <script src="/js/app.js"></script>
</body>
</html>
