{{ include('partials/main.html.twig') }}

<head>
  {{ include('partials/title-meta.html.twig', {title: 'Forgot Password'}) }}
  {{ include('partials/head-css.html.twig') }}
</head>

{{ include('partials/body.html.twig') }}
<div class="auth-page">
  <div class="container-fluid p-0">
    <div class="row g-0">
      <div class="col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-12">
        <div class="auth-full-page-content d-flex p-sm-4 p-3">
          <div class="w-100">
            <div class="d-flex flex-column h-100">
              <div class="auth-content my-auto">
                <div class="text-center">
                  <div class="mb-3">
                    <img src="/images/3tek-logo.png" alt="" height="40" class="mb-3">
                    <h5 class="mb-0">Réinitialiser le mot de passe</h5>
                  </div>
                  <p class="text-muted mt-2">Réinitialisez votre mot de passe avec 3Tek-Europe.</p>
                </div>

                {% for flash_error in app.flashes('reset_password_error') %}
                  <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm, {attr:{class: 'mt-4 pt-2'}}) }}
                  <div class="mb-3">
                    {{ form_row(requestForm.email, {
                      label: 'Adresse Email',
                      attr: {
                        class: 'form-control',
                        placeholder: 'Entrez votre email'
                      }
                    }) }}
                  </div>

                  <div class="mb-3">
                    <small class="text-muted">
                      Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                  </div>

                  <div class="mb-3 d-grid">
                    <button class="btn btn-primary btn-lg waves-effect waves-light" type="submit">
                      Envoyer le lien de réinitialisation
                    </button>
                  </div>
                {{ form_end(requestForm) }}

                <div class="mt-5 text-center">
                  <p class="text-muted mb-0">Vous vous souvenez de votre mot de passe ?
                    <a href="{{ path('app_login') }}" class="text-primary fw-semibold">Se connecter</a>
                  </p>
                </div>
              </div>
              <div class="mt-4 mt-md-5 text-center">
                <p class="mb-2">©
                  <script>document.write(new Date().getFullYear())</script>
                  3Tek-Europe
                </p>
                <p class="mb-2 small">
                  <a href="{{ path('app_privacy_policy') }}" class="text-muted">Confidentialité</a>
                  <span class="mx-2">|</span>
                  <a href="{{ path('app_legal_notice') }}" class="text-muted">Mentions légales</a>
                </p>
                <p class="mb-0 small text-muted">
                  Développé <i class="mdi mdi-heart text-danger"></i> par Odoip
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xxl-8 col-xl-7 col-lg-6 col-md-5 d-none d-md-block">
        <div class="auth-bg pt-md-5 p-4 d-flex">
          <div class="bg-overlay bg-primary"></div>
          <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
          <div class="row justify-content-center align-items-center">
            <div class="col-xl-7">
              <div class="p-0 p-sm-4 px-xl-0">
                <div class="text-center text-white">
                  <i class="bx bx-lock-open display-1 text-white-50 mb-4"></i>
                  <h4 class="text-white">Mot de passe oublié ?</h4>
                  <p class="text-white-50">Pas de problème ! Entrez votre email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{ include('partials/vendor-scripts.html.twig') }}

</body>
</html>
